<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ChooseLanguage">
    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/imageSlider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderAutoCycleEnabled="true"
        app:sliderCircularHandlerEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="0dp"
        app:sliderIndicatorSelectedColor="#2288FF"
        app:sliderIndicatorUnselectedColor="#D9E9FF"
        app:sliderScrollTimeInSec="5"
        app:sliderStartAutoCycle="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white_color"
        android:textSize="19sp"
        android:textStyle="bold"
        android:id="@+id/t_banner"
        android:visibility="gone"
        android:layout_above="@id/ty_d"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="hpl] hgsd] ugdd"/>

   <RelativeLayout
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:layout_margin="10dp"
       android:padding="5dp"
       android:layout_alignParentBottom="true"
       android:id="@+id/t_l"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="150dp"
           android:text="عربي"
           android:textSize="17sp"
           android:id="@+id/t_arabic"
           android:gravity="center"
           android:layout_alignParentStart="true"
           android:layout_alignParentLeft="true"
           android:textColor="@color/white_color"
           android:background="@drawable/roundedborder"
           android:layout_height="50dp" />
       <TextView
           android:layout_width="150dp"
           android:text="English"
           android:textSize="17sp"
           android:id="@+id/t_english"
           android:gravity="center"
           android:layout_alignParentEnd="true"
           android:layout_alignParentRight="true"
           android:textColor="@color/white_color"
           android:background="@drawable/roundedborder"
           android:layout_height="50dp" />
   </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/whiteround"
        android:layout_above="@id/t_l"
        android:id="@+id/ty_d"
        android:layout_margin="20dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:src="@drawable/download"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white_color"
            android:textSize="16sp"

            android:text="@string/kw"/>
    </RelativeLayout>

</RelativeLayout>